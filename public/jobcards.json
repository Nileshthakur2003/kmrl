            "EmptyTrashBins",
            "RefillSanitizerDispensers"
          ]
        },
        "ExteriorWashing": {
          "description": "Cleaning the outside body of trainsets.",
          "subtasks": [
            "HighPressureWash",
            "RemoveDirtAndGraffiti",
            "DryTrainExterior",
            "InspectForSurfaceDamage"
          ]
        },
        "BrandingInspection": {
          "description": "Inspect and maintain advertising wraps.",
          "subtasks": [
            "CheckWrapIntegrity",
            "RepairPeelingEdges",
            "ScheduleWrapReplacement",
            "CoordinateWithAdvertisingTeam"
          ]
        }
      }
    },
