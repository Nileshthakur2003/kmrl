        "TrackCompatibilityCheck": {
          "description": "Confirm trainset is compatible with assigned track and depot.",
          "subtasks": [
            "ReviewStablingGeometry",
            "ConfirmTrainLength",
            "VerifyPlatformAlignment"
          ]
        }
      }
    },
    "CleaningAndDetailing": {
      "description": "Interior and exterior cleaning and aesthetic maintenance.",
      "tasks": {
