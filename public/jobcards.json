          "subtasks": [
            "LiftTrainUsingPitjack",
            "RemoveBogieFromTrainset",
            "InspectAllBogiesParts",
            "ReplaceWornParts",
            "ReassembleAndTest"
          ]
        },
        "HVACMajorServicing": {
          "description": "Complete teardown and servicing of HVAC units.",
