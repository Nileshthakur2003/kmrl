    "PreventiveMaintenance": {
      "description": "Scheduled routine maintenance tasks based on time or mileage.",
      "tasks": {
        "BogieInspection": {
          "description": "Check bogies for wear, lubrication, and structural integrity.",
          "subtasks": [
            "VisualInspection",
            "LubricateBearings",
            "CheckWheelProfile",
            "MeasureAxleClearance",
            "CheckSuspensionComponents",
            "RecordMeasurements"
          ]
        },
        "BrakeSystemCheck": {
          "description": "Inspect and maintain brake pads, discs, and actuators.",
          "subtasks": [
            "InspectBrakePads",
            "MeasurePadThickness",
            "CheckBrakeDiscWear",
            "TestBrakeActuators",
            "ReplaceWornComponents"
          ]
        },
        "HVACMaintenance": {
          "description": "Routine servicing of Heating, Ventilation, and Air Conditioning.",
          "subtasks": [
            "CleanFilters",
            "CheckCoolingCoils",
            "TestCompressorFunction",
            "InspectElectricalConnections",
            "CheckAirFlowRates"
          ]
        },
        "DoorMechanismCheck": {
          "description": "Ensure doors operate smoothly and safely.",
          "subtasks": [
            "TestDoorOpenCloseCycles",
            "InspectSensors",
            "LubricateMovingParts",
            "CheckEmergencyRelease",
            "ReplaceFaultyComponents"
          ]
        },
        "ElectricalSystemsCheck": {
          "description": "Routine check of electrical circuits and batteries.",
          "subtasks": [
            "InspectWiringHarness",
            "TestBatteryVoltage",
            "CheckLightingSystems",
            "TestControlPanels",
            "ReplaceDamagedFuses"
          ]
        }
      }
    },
    "CorrectiveMaintenance": {
      "description": "Unplanned repairs triggered by faults or defects.",
      "tasks": {
        "SignallingFaultRepair": {
          "description": "Address defects in signaling equipment.",
          "subtasks": [
            "DiagnoseSignalError",
            "ReplaceFaultyModules",
            "TestSignalCommunication",
            "UpdateFirmwareIfNeeded"
          ]
        },
        "HVACRepair": {
          "description": "Repair or replace malfunctioning HVAC components.",
          "subtasks": [
            "IdentifyFaultyComponent",
            "ReplaceCompressorOrFan",
            "RechargeRefrigerant",
            "TestSystemAfterRepair"
          ]
        },
        "DoorFailureFix": {
          "description": "Repair door jams, sensor faults, or mechanical issues.",
          "subtasks": [
            "ResetDoorControlUnit",
            "ReplaceDoorSensors",
            "RealignDoorPanels",
            "TestDoorOperation"
          ]
        },
        "ElectricalFaultRepair": {
          "description": "Fix wiring or electrical component failures.",
          "subtasks": [
            "TraceElectricalFault",
            "ReplaceDamagedCables",
            "TestCircuitContinuity",
            "VerifySystemOperation"
          ]
        }
      }
    },
    "Inspection": {
      "description": "Safety, compliance and fitness checks.",
      "tasks": {
        "FitnessCertificateVerification": {
          "description": "Validate fitness certificates from Rolling-Stock, Signalling, Telecom.",
          "subtasks": [
            "VerifyRollingStockCertificate",
            "VerifySignallingCertificate",
            "VerifyTelecomCertificate",
            "LogCertificateExpiryDates"
          ]
        },
        "SafetyAudit": {
          "description": "Comprehensive safety inspection of trainset.",
          "subtasks": [
            "CheckFireExtinguishers",
            "InspectEmergencyExits",
            "TestPassengerAlarms",
            "VerifyFirstAidKit",
            "ReviewSafetySignage"
          ]
