            "WeldOrReplaceDamagedPanels",
            "TestStructuralIntegrity",
            "PaintAndProtectSurface"
          ]
        }
      }
    },
    "Emergency": {
      "description": "Immediate urgent maintenance required due to operational disruptions.",
      "tasks": {
        "UnscheduledWithdrawal": {
          "description": "Remove trainset from service due to sudden fault.",
          "subtasks": [
            "IdentifyIssue",
            "NotifyOperationsControl",
            "MoveTrainToInspectionBay",
            "BeginImmediateRepair"
          ]
        },
        "CriticalComponentReplacement": {
          "description": "Replace critical failed component to restore functionality.",
          "subtasks": [
            "SourceSparePart",
            "ReplaceComponent",
            "TestFunctionality",
            "ReturnToService"
          ]
        }
      }
    },
    "TestingAndCommissioning": {
      "description": "Validation and testing post-maintenance to ensure readiness.",
      "tasks": {
        "FunctionalityTest": {
          "description": "Check all repaired/maintained systems.",
          "subtasks": [
            "RunDiagnosticSoftware",
            "PerformOperationalTestRuns",
            "VerifySystemResponses",
            "DocumentTestResults"
          ]
        },
        "SafetyCertification": {
          "description": "Certify safety compliance before release.",
          "subtasks": [
            "ConductSafetyChecks",
            "ApproveFitnessCertificates",
            "IssueReleaseAuthorization"
          ]
        }
      }
